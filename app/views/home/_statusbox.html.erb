<% @status = Status.new %>
<%= form_for @status,:url => url_for(:action => 'poststatus', :controller => 'statuses', :user_id=>current_user.id), :method => 'post', :remote => true do |f| %>
<%= f.label :text %><br>
<%= f.text_field :text, :id=>'statusinput' %>

<div class="actions">
  <%= f.submit "Post", :class=>"btn btn-info" %>
</div>
<%end%>
